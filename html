      background-color: #4CAF50;
      color: white;
    }

    button:hover {
      background-color: #45a049;
    }

    .category-box {
      margin-top: 20px;
      padding: 20px;
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .cat-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 15px;
    }

    .task-filter {
      margin-bottom: 20px;
    }

    .due-date {
      font-size: 14px;
      color: #555;
    }

    .task-colors {
      display: flex;
      gap: 10px;
      margin-bottom: 10px;
    }

    .task-list {
      list-style-type: none;
      padding: 0;
    }

    li {
      padding: 10px;
      background-color: #f4f4f4;
      margin: 5px 0;
